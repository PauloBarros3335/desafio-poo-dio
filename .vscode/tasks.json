{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "javac",
            "args": ["-cp", "lib/junit.jar", "-d", "target/classes", "src/main/java/Main.java", "src/main/java/br/com/dio/desafio/dominio/*.java"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "java",
            "args": ["-jar", "lib/junit.jar", "--class-path", "target/classes;target/test-classes", "--scan-classpath"],
            "group": "test",
            "dependsOn": ["compile-test"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "compile-test",
            "type": "shell",
            "command": "javac",
            "args": ["-cp", "lib/junit.jar;lib/junit-api.jar;target/classes", "-d", "target/test-classes", "src/test/java/br/com/dio/desafio/dominio/*.java"],
            "group": "build",
            "dependsOn": "compile",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": ["-cp", "target/classes", "Main"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "compile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}